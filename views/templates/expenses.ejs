<button class="btn btn-primary" ng-click="goToAdd()">Add Expense</button>

<table class="table table-striped table-hover table-condensed">
	<thead>
		<caption><h3>Expenses</h3></caption>
		<tr><th>Date</th><th>Vendor</th><th>Category</th><th>Amount</th><th>Currency</th><th>Delete</th></tr>
	</thead>
	<tbody>
		<tr ng-repeat="expense in expenses | orderBy : '-date'">
			<td>{{ expense.date | date : 'shortDate' }}</td>
			<td><a href="#/expenses/{{ expense._id }}">{{ expense.vendor }}</a></td>
			<td>{{ expense.category.description }}</td>
			<td>{{ expense.amount | currency }}</td>
			<td>{{ expense.currency.description }}</td>
			<td><button ng-click="deleteExpense( expense._id )">âœ˜</button></td>
		</tr>
	</tbody>
</table>
